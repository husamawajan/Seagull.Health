@model ReturnRequestActionModel

@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.Id)

<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-body">
            @(Html.LocalizedEditor<ReturnRequestActionModel, ReturnRequestActionLocalizedModel>("returnrequestaction-localized",
            @<div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.SeagullLabelFor(model => model.Locales[item].Name)
                    </div>
                    <div class="col-md-9">
                        @Html.SeagullEditorFor(model => model.Locales[item].Name)
                        @Html.ValidationMessageFor(model => model.Locales[item].Name)
                    </div>
                </div>
                @Html.HiddenFor(model => model.Locales[item].LanguageId)
            </div>
    ,
            @<div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.SeagullLabelFor(model => model.Name)
                    </div>
                    <div class="col-md-9">
                        @Html.SeagullEditorFor(model => model.Name, required: true)
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
            </div>
    ))
            <div class="form-group">
                <div class="col-md-3">
                    @Html.SeagullLabelFor(model => model.DisplayOrder)
                </div>
                <div class="col-md-9">
                    @Html.SeagullEditorFor(model => model.DisplayOrder)
                    @Html.ValidationMessageFor(model => model.DisplayOrder)
                </div>
            </div>
        </div>
    </div>
</div>